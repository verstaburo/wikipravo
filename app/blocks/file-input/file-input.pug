mixin file-input(btnName, emptyText, id, formId, btnAddClass)
  -var btnClass = ""
  -var inputId = "files" + Math.round(Math.random()*100)
  -if(btnAddClass) {btnClass = btnAddClass} else {btnClass = "button_transparent_second"}
  +b.file-input&attributes(attributes)
    +e.OUTPUT(for=inputId).output
      +e.SPAN.placeholder= emptyText
      +b.UL.files-list.__files-list
    +e.buttons
      block
      +e.LABEL(for=inputId class="fileselect " + btnClass)= btnName
        +e.INPUT(type="file" id=inputId name="files[]" multiple form= formId).files
