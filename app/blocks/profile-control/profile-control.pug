include ../icon/icons
include ../note/note

mixin profile-control(type, title, image, state, titleVisible)
  -var controlState = ""
  -if(state) {controlState = " " + state;}
  +b.BUTTON(class="profile-control" + "_" + type + controlState, title= title )&attributes(attributes)
    +e.SPAN.img
      +icon(image).__icon
    -if(titleVisible) {
      +e.SPAN.title= title
    -}
