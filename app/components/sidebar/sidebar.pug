include ../../blocks/logo-block/logo-block
include ../../blocks/nav-menu/nav-menu
include ../../blocks/contacts-block/contacts-block
include ../../blocks/selectbox/selectbox
include ../popup-location/popup-location

mixin sidebar()
  +b.sidebar
    +e.row_logo
      +logo-block({"logotype" : "light"})
    +e.row_nav-menu
      +nav-menu(getData('sidebar-nav-basic'))
    +e.row_contacts-block
      +contacts-block(getData('sidebar-contacts'))._icons._dark
      +selectbox(getData('sidebar-city-list')).sidebar__selectbox.selectbox_scrollable
      +popup-location.__popup-location
      
