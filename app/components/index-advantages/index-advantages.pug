include ../../blocks/client-registration/client-registration
include ../../blocks/advantages-item/advantages-item

mixin index-advantages()
  +b.SECTION.index-advantages&attributes(attributes)
    -var cols = [getData('advantages-registration-left'), getData('advantages-registration-right')]
    -var addClass = '_left'
    -for (var i = 0; i < 2; i++)
      -if(i == 1) {addClass= '_right'}
      +e(class='__col' + addClass)
        +client-registration(cols[i].header).__header
        -var boldText = cols[i].paragraph.special
        +e.P.describe
          |#{cols[i].paragraph.text1}
          +e.B= boldText + " "
          |#{cols[i].paragraph.text2}
        +e.UL.list
          each item in cols[i].list
            +advantages-item(item)
