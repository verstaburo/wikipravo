include ../../blocks/popup/popup
include ../../blocks/block-title/block-title
include ../../blocks/input/input
include ../../blocks/button/button
include ../../blocks/file-drop/file-drop
include ../../blocks/radiobutton/radiobutton
include ../../blocks/section-title/section-title

mixin popup-lawyer()
  +popup.popup-lawyer__#popup-lawyer&attributes(attributes)
    +block-title("Являетесь ли Вы адвокатом")._bold.__title
    +e.FORM.__form
      +e.SECTION.__switches
        +e.row
          +e.switch-btn
            +input(type="radio" id="lawyer" name="lawyer" value="true" data-open-field="lawyer" checked).__switch-radio
            +e.LABEL(for="lawyer").__text Да
          +e.switch-btn
            +input(type="radio" id="notlawyer" name="lawyer" value="false" data-open-field="notlawyer").__switch-radio
            +e.LABEL(for="notlawyer").__text Нет
      +e.SECTION(data-field="lawyer" class="__lawyer active")
        +e.column_left
          +section-title("Удостоверение адвоката")._biger._dark._left.__subtitle
          +e.__row
            +e.__col_field
              +input(type="text" placeholder="123413240034").__input
              +e.SPAN.__comment (Не будет отображаться на сайте)
          +e.__row
            +e.__col_field
              +file-drop("Загрузите подтверждающий документ").__files
        +e.column_right
          +section-title("Форма адвокатского образования")._small._dark._left.__subtitle_small
          +e.__row
            +e.__col_field
              +radio-vs-input("Адвокатский кабинет", "chamber", "office", "chamber", "\"Падва и партнеры\"", true)._blue._dark._large.__radio
          +e.__row
            +e.__col_field
              +radio-vs-input("Адвокатское бюро", "buro", "office", "buro", "\"Падва и партнеры\"")._blue._dark._large.__radio
          +e.__row
            +e.__col_field
              +radio-vs-input("Коллегия адвокатов", "collegium", "office", "collegium", "\"Падва и партнеры\"")._blue._dark._large.__radio
      +e.SECTION(data-field="notlawyer" class="__notlawyer")
        +e.__row
          +e.__col_field._half
            +radio-vs-input("Частнопрактикующий юрист", "private", "status", "private", "\"Падва и партнеры\"", true)._blue._dark._large.__radio
        +e.__row
          +e.__col_field._half
            +radio-vs-input("Работодатель", "employer", "status", "employer", "\"Падва и партнеры\"")._blue._dark._large.__radio
        +e.__row
          +e.__col_field._shift._half
            +file-drop("Загрузите подтверждающий документ").__files
      +e.__buttons
        +button('button')(type="submit")._text._border._big.__button.js-popup-close Сохранить

