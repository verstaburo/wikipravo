extends ../../layouts/default

block head
  - var pageTitle = 'Wiki Pravo — Заявка со сделками (в арбитраже)'

block content
  +b.request-deals
    +request-deal-head('#arbitr', 'arbitr', '#complete', 'complete').__head
    +request-card-2(true).__card
    +dialog(getData('deal-dialog-short'), "Переписка с заказчиком").__dialog
    +deal-list('arbitr').__deals

block page-left
  +sidebar

block page-top
  +header(true)

block page-bottom
  +footer

block page-popups
  +popups
    +popup-login
    +popup-deal-review
    +popup-deal-arbitr
